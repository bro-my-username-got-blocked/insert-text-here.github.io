<!DOCTYPE html>
<html>
<head>
	<title>Fullscreen Menu Example</title>
	<style>
		body {
			margin: 0;
			padding: 0;
			font-family: Arial, sans-serif;
		}
		#menu {
			position: fixed;
			top: 0;
			left: 0;
			width: 100%;
			height: 50px;
			background-color: #333;
			color: #fff;
			display: flex;
			align-items: center;
			justify-content: space-between;
			padding: 0 20px;
			box-sizing: border-box;
			z-index: 999;
		}
		#menu .fullscreen {
			display: none;
		}
		#menu.fullscreen {
			height: 100%;
			background-color: #fff;
			color: #333;
			flex-direction: column;
			justify-content: center;
			text-align: center;
		}
		#menu.fullscreen .fullscreen {
			display: block;
		}
	</style>
</head>
<body>
	<div id="menu">
		<h1>My Menu</h1>
		<button id="fullscreen-button">Fullscreen</button>
	</div>
	<div class="fullscreen">
		<h2>This is the fullscreen menu</h2>
		<p>Click the button below to exit fullscreen mode.</p>
		<button id="exit-fullscreen-button">Exit Fullscreen</button>
	</div>
	<script>
		const menu = document.getElementById('menu');
		const fullscreenButton = document.getElementById('fullscreen-button');
		const exitFullscreenButton = document.getElementById('exit-fullscreen-button');

		fullscreenButton.addEventListener('click', () => {
			menu.classList.add('fullscreen');
		});

		exitFullscreenButton.addEventListener('click', () => {
			menu.classList.remove('fullscreen');
		});
	</script>
</body>
</html>
